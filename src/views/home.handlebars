	<div class="appContainer">
		<form id="form">
			<h2>Agreg√° un producto:</h2>
			<label for="">
				Nombre
				<input
					id="productNameInput"
					type="text"
					name="nombre"
					placeholder="Ingrese el nombre del producto"
				/>
			</label>
			<label for="">
				Precio
				<input
					id="productPriceInput"
					type="text"
